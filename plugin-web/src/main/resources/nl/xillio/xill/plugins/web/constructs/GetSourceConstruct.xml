<function>
    <description>
Returns a `string` containing the source (X)HTML of the web `page` in argument.
    </description>
	<parameterDescriptions>
        <parameterDescription parameterName="page">
The web page that will be used
        </parameterDescription>
	</parameterDescriptions>
    <examples>
        <example title="Usage">
            <header>Get web page source</header>
            <code>
                use Web;
                use System;

                var page = Web.loadPage("http://www.xillio.com");
                var source = Web.getSource(page);
                System.print(source);
            </code>
        </example>
    </examples>
    <references>
        <reference>loadPage</reference>
    </references>
    <tags>
        source, load, page, web, code, html, xhtml
    </tags>
</function>