<function>
    <description>
Delete a single document by id.
    </description>
    <parameterDescriptions>
        <parameterDescription parameterName="id">
The id of the document that needs to be deleted.
        </parameterDescription>
        <parameterDescription parameterName="identity">
The database that will be used.
        </parameterDescription>
    </parameterDescriptions>
    <examples>
        <example title="Usage">

            <header>Delete a document with a known id</header>
            <code>
                use Document;

                // Delete the document
                Document.delete("af981cd6-e077-4b50-844d-3b58758038b4");
            </code>
        </example>
    </examples>
    <references>
        <reference>get</reference>
        <reference>save</reference>
        <reference>delete</reference>
        <reference>find</reference>
    </references>
    <tags>
        udm, define, remove, delete
    </tags>
</function>
