/*
* Specification: The logical OR operator MUST return false and only if both operands are false or true otherwise.
* Input -> Expected: 
*   true, true -> true
*   true, false -> true
*   false, true -> true
*   false, false -> false
*/

use Assert;

Assert.isTrue(testBehavior(true, true));
Assert.isTrue(testBehavior(false, true));
Assert.isTrue(testBehavior(true, false));
Assert.isFalse(testBehavior(false, false));

function testBehavior(bool1, bool2) {
    return bool1 || bool2;
}