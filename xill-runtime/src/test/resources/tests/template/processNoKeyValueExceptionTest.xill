/*
* Specification: The template plugin MUST throw an error when a variable could not be filled in.
* Expected: Error
* Input: Hello ${user}!
*/
use Assert, String, File, Stream, Template;

include testresources.template.NoTestTemplateRunner;

var testName = "processNoKeyValueException";
var templatesDirectory = "testresources/template/";

do {
    // Run
    var output = File.openWrite(templatesDirectory :: testName :: "-Output.txt");
    Template.process(templatesDirectory :: testName :: "-Template.txt", output);
    
    // Assert
    var expected = Stream.getText(File.openRead(templatesDirectory :: testName :: "-ExpectedOutput.txt"));
    var outputFile = Stream.getText(File.openRead(templatesDirectory :: testName :: "-Output.txt"));
    Assert.equal(outputFile, expected, "The expected output is not the same as the generated output");
} fail (e) {
    Assert.isTrue(String.contains(e.message, "user"));   
} success {
    Assert.error("The processing of the template should throw an error");
} finally {
    File.delete(templatesDirectory :: testName :: "-Output.txt");
}
