/*
* Specification: The template plugin MUST throw an error when a variable could not be filled in.
* Expected: Error
* Input: Hello ${user}!
*/
use Assert, Template, File, Stream;

var templatesDirectory = "testresources/template/";

do { 
    // Run
    var output = File.openWrite(templatesDirectory :: "processNoKeyValueExceptionOutput.txt");
    Template.process(templatesDirectory :: "processNoKeyValueExceptionTemplate.txt", output);
} success {
    Assert.error("Workflow should throw an error since 'user' is not defined.");
} finally {
    File.delete(templatesDirectory :: "processNoKeyValueExceptionOutput.txt");
}