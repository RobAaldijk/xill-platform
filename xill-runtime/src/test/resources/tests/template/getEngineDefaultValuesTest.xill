/*
* Specification: The default values MUST be parsable by the getEngine construct
* Expected: Not null and no errors
* Input: See values below
*/
use Assert, Template;

var options = {
    "templatesDirectory" :      ".",        // Project root
    "encoding" :                "UTF-8",
    "noCaching" :               false,
    "strongCache" :             0,
    "softCache" :               2147483647 // Max integer
};

var engine;
do {
    engine = Template.getEngine(options);    
} fail (e) {
    Assert.error("The default value parsing should not fail. Message: " :: e.message);
}

Assert.notNull(engine, "The engine should not be null.");