/*
* Specification: 
* Expected: Hello World!
* Input: 
*   Hello <#if 1 == 1>${"World"}<#else>Error</#if>!
*   <#-- Comment -->
*/
use Assert, Template, File, Stream;

var templatesDirectory = "testresources/template/";

do { 
    // Run
    var output = File.openWrite(templatesDirectory :: "processMinimalUsageOutput.txt");
    Template.process(templatesDirectory :: "processMinimalUsageTemplate.txt", output);
    
    // Assert
    var expected = Stream.getText(File.openRead(templatesDirectory :: "processMinimalUsageExpectedOutput.txt"));
    var outputFile = Stream.getText(File.openRead(templatesDirectory :: "processMinimalUsageOutput.txt"));
    Assert.equal(outputFile, expected, "The expected output is not the same as the generated output");
} fail (e) {
    Assert.error("Workflow should not throw an error. Message : " :: e.message);
} finally {
    File.delete(templatesDirectory :: "processMinimalUsageOutput.txt");
}