/*
* Specification: Getting the length in bytes of null should throw an error
* Expected: An error is thrown and the code after the construct call in the do-block is not executed
* Input: null
*/

use String, Assert;

do {
    String.byteLength(null);
    Assert.error("String.byteLength with null did not error.");
} success {
    Assert.error("String.byteLength with null was successful.");
}