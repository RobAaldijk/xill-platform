/*
* Specification: abs MUST return the absolute value of the given number.
* Expected: The absolute value of the given value
* Input: See dataset
*/

use Math, Assert;

var tests = [
    [6, 6],
    [3.14, 3.14],
    [-123, 123],
    [-3.78, 3.78],
    [0, 0]
];

foreach (item in tests) {
    Assert.equal(Math.abs(item[0]), item[1]);
}