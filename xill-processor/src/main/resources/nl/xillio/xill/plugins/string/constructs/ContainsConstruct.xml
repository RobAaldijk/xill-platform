<function>
    <description>
Returns `true` if `haystack` contains `needle` or `false` if it does not.
    </description>
	<parameterDescriptions>
		<parameterDescription parameterName="haystack">
The string or list that will be searched.
        </parameterDescription>
		<parameterDescription parameterName="needle">
The string that will be searched for.
        </parameterDescription>
	</parameterDescriptions>
    <examples>
        <example title="String Usage">
            <code>
                use System;
                use String;

                if (String.contains("testing", "tes")) {
                    System.print("testing contains tes");
                }
            </code>
        </example>
    </examples>
    <references>
        <reference>Collection.contains</reference>
    </references>
    <searchTags>
        search, list
    </searchTags>
</function>