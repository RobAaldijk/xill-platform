<function>
    <description>
Returns the length of `string` in characters.
    </description>
	<parameterDescriptions>
		<parameterDescription parameterName="value">
The string that will be used.
        </parameterDescription>
	</parameterDescriptions>
    <examples>
        <example title="Usage">
            <code>
                use System;
                use String;

                var length = String.length("four");
                // This will print: four has 4 letters.
                System.print("four has " :: length :: " letters.");
            </code>
        </example>
    </examples>
    <searchTags>
        size, length
    </searchTags>
</function>