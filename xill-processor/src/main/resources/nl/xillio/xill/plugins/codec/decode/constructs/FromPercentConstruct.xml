<function>
    <description>
Returns the URL-decoded (percent-decoded) version of an encoded string.
    </description>
	<parameterDescriptions>
		<parameterDescription parameterName="inputString">
The string that will be decoded.
        </parameterDescription>
	</parameterDescriptions>
	<longDescription>
Essential for converting URLâ€™s back with GET variables in them.
	</longDescription>
    <examples>
        <example title="Usage">
            <code>
                use System;
                use Decode;

                // This will print: Together, we spent $50.95
                System.print(Decode.fromPercent("Together%2C%20we%20spent%20%2450.95"));
            </code>
        </example>
    </examples>
    <references>
        <reference>Encode.toPercent</reference>
    </references>
    <searchTags>
        URL
    </searchTags>
</function>
