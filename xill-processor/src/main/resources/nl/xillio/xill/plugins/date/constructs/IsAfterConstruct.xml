<function>
    <description>
Determines if the date is after another date.   
    </description>
	<parameterDescriptions>
		<parameterDescription parameterName="date">
The date that will be checked.
        </parameterDescription>
		<parameterDescription parameterName="other">
The date that will be checked against.
        </parameterDescription>
	</parameterDescriptions>
    <examples>
        <example title="Usage">
            <header>Comparsion of two dates.</header>
            <code>
                use System;
                use Date;
                var date1 = Date.of(2015, 12, 31, 10, 5, 0);
                var date2 = Date.of(2015, 12, 30, 1, 0, 0);
                
                // This will print out true as date1 is after date2
                System.print(Date.isAfter(date1, date2));
            </code>
        </example>
    </examples>
    <references>
        <reference>isBefore</reference>
        <reference>now</reference>
    </references>
    <tags>
        date, time, datetime, after, comparison
    </tags>
</function>