/* Specification: getMimeType MUST return the correct MIME type for a file, or null if it is unknown.
 * Input: A plain text file
 * Expected: "text/plain" for the text file, null for the unknown file
 */

use Assert, File;

var file = "testresources/file/file.txt";
var unknown = "testresources/file/folder/subfile.unknown";
var fileDoesNotexist = "nonexistingfile.docx";

Assert.equal(File.getMimeType(file), "text/plain");
Assert.equal(File.getMimeType(unknown), null);
Assert.equal(File.getMimeType(fileDoesNotexist), "application/vnd.openxmlformats-officedocument.wordprocessingml.document");