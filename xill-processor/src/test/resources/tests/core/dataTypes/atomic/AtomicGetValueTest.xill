/*
* Specification: Trying to get a value from an ATOMIC MUST throw an error
* Input: An atomic
* Expected: An error
*/

use Assert;

var atomic = 7;

do {
    atomic.nope;
} success {
    Assert.error("Getting value from an ATOMIC did not throw an error.");
}