/*
* Specification: Error message on approaching member of ATOMIC value improved
* Input: An atomic
* Expected: An error explaining which member of which ATOMIC is called
*/

use Assert, System;

var atomic = 7;
var error = null;

do {
	var newAtomic = atomic.nonExistingMember;
} fail(e) {
    error = e;
}

Assert.notNull(error);
Assert.equal(error.message, "Cannot get member 'nonExistingMember' from ATOMIC value 'atomic'.");