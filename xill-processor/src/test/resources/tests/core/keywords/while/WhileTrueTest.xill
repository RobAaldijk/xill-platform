/*
* Specification: If the condition of a while is true the code MUST be executed which MUST be checked on each iteration
* Input: Increment counter with value 0
* Expected: Counter value is 10
*/

use Assert;

var i = 0;
while(i< 10) {
	Assert.isTrue(i<10);
	i++;
}
Assert.equal(i,10);
