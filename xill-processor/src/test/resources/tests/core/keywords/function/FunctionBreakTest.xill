/* 
* Specification: Calling break in a function MUST break out of the function and MUST continue on code after the functioncall if there is some
* Input: global value on false
* Expected: Global has been changed to true
*/

use Assert;

var global = false;

withBreak();

Assert.isTrue(global, "Execution should continue normally.");

function withBreak() {
    global = true;
	break;
	global = false;
	Assert.error("Break should stop the function.");
}

