use Assert, Mongo, File, Hash, String, Stream;

var connection = Mongo.connect("xill-IT");

// Insert some binary data
var binaryStream = File.openRead("testresources/mongo/binary.file");
Mongo.insertOne("bin", {
    "file": binaryStream,
    "string" : String.stream("test"),
    "tag": "tag"});

// Find the binary data
var mongoResult = Mongo.findOne("bin", {"tag": "tag"});

// Compare the binary data
var check = File.openRead("testresources/mongo/binary.file");

Assert.equal(Hash.toSHA256(check), Hash.toSHA256(mongoResult.file));
Assert.equal("test", Stream.getText(mongoResult.string));
