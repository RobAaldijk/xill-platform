/*
* Specification: When given the relative path to a resource, it MUST return a inputStream to the resource or null if it could not be found.
* Expected: An inputStream for the given resource. 
* Input: The relative path to a resource.
*/

use System, Assert, Stream;

Assert.isNull(System.openResource("nonExistingFile"));
var stream = System.openResource("testresources/system/resource.txt");
Assert.equal(Stream.getText(stream), "May the xill be with you.");
